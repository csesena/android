<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/light_blue" android:startColor="@color/light_blue" />

            <stroke android:width="3dp" android:color="@color/softest_grey" />

           <!-- <corners android:radius="5dp" /> -->

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/orange" android:startColor="@color/orange" />

            <stroke android:width="3dp" android:color="@color/grey" />

            <!-- <corners android:radius="5dp" /> -->

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/button_grey" android:startColor="@color/grey" />

            <stroke android:width="1dp" android:color="@color/softest_grey" />

            <!-- <corners android:radius="5dp" /> -->

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>